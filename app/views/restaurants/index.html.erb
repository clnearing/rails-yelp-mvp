<h1>Restaurants!</h1>
<ul>
<% @restaurants.each do |restaurant| %>
  <li class="my-3"><%= restaurant.name %>
    <%= link_to "See More", restaurant_path(restaurant), class: "btn btn-secondary btn-sm py-0" %>
  </li>
<% end %>
</ul>
<%= link_to 'Add a Restaurant', new_restaurant_path, class: "btn btn-warning btn-sm py-0"%>
